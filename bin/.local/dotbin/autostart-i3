#!/bin/bash

set -eo pipefail

ask="Autostart?"
ans=$(printf "%s\n%s" "yes" "no" | dmenu -b -p "${ask}")
if [[ "${ans}" == "no" ]]; then exit 1; fi

if ! [[ $(pgrep telegram) ]]; then
    telegram-desktop &!
fi
if ! [[ $(pgrep evolution) ]]; then
    evolution &!
fi
if ! [[ $(pgrep mattermost) ]]; then
    mattermost-desktop &!
fi
if ! [[ $(pgrep slack) ]]; then
    slack &!
fi
