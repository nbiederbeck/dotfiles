#!/bin/bash

while true; do
    n=$(pgrep restic-backup | wc -l)
    if [ "${n}" -eq 0 ]; then
        echo 'not running'
        exit 0
    elif [ "${n}" -eq 1 ]; then
        echo 'stopping restic'
        pkill restic-backup
        exit 0
    else  # -gt 1
        printf 'still backing up ... '
        sleep 10
    fi
done
