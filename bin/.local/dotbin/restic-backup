#!/bin/bash
RESTIC=${HOME}/.restic

source ${RESTIC}/config

if [[ ! -d ${RESTIC_REPOSITORY} ]]; then
    notify-send "Restic" "Repository not found!"
    exit 1
fi

notify-send "Restic" "Backing up ..."

restic backup ${HOME} --verbose --exclude-file=${RESTIC}/exclude

notify-send "Restic" "Finished"
