# vim: ft=gitconfig commentstring=#%s

[core]
    editor = vim

[user]
    name = Noah Biederbeck

[pull]
    rebase = true

[merge]
    # conflictstyle = diff3
    tool = vimdiff
    trustExitCode = false
[mergetool]
    keepBackup = false

[log]
    date = iso

[alias]
    l = log --oneline
    ll = log --color --graph --date=short --pretty=format:\"%Cblue%ad %Cgreen%an %C(yellow)%h %Creset%s %Cred%d %n%Creset%b\"
    ol = log --oneline
    c = commit --verbose
    d = diff
    cm = commit --verbose
    co = checkout
    br = branch
    s = status
    a = add

