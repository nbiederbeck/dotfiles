[core]
    editor = nvim
    pager = less -RF

[user]
    name = Noah Biederbeck
    email = noah.biederbeck@tu-dortmund.de
    useConfigOnly = true
    signingkey = 5B2B794005C09CF8

[pull]
    rebase = true

[merge]
    conflictstyle = diff3
    tool = nvim
    trustExitCode = false

[mergetool "nvim"]
    cmd = nvim -f -c \"Gvdiffsplit!\" \"$MERGED\"

[mergetool]
    keepBackup = false

[log]
    date = iso

[alias]
    alias = !git config --list | awk -F. '/^alias/ {print $2}'
    l = log --oneline --graph
    c = commit --verbose
    cm = commit --verbose -m
    s = status
    a = add
    d = diff --stat
    ds = diff --staged
    head = log --oneline -15
    stat = diff --stat
    black = !black $(git diff --name-only)
    b = black
    cont = rebase --continue
    # Pre-Commit Run
    pcr = !pre-commit run
    # Pre-Commit Run (on) All (files)
    pcra = !pre-commit run --all-files
    # Pre-Commit Run (on) Modified (files)
    pcrm = !pre-commit run --files $(git ls-files --modified $(git rev-parse --show-toplevel))
    staged = diff --staged

[init]
    defaultBranch = main

[bash]
    showInformativeStatus = true
    showUntrackedFiles = true
    showDirtyState = true

[commit]
    # gpgsign = true

