[alias]
    l = log --oneline --graph
    c = commit --verbose
    cm = commit --verbose -m
    s = status
    a = add
    d = diff
    ds = diff --staged
    head = log --oneline -15
    stat = diff --stat
    black = !black $(git diff --name-only)
    b = black
    cont = rebase --continue

