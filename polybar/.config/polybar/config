; vim: ft=dosini
[colors]

background = #222222
foreground = #ffffff
separator  = #666666
black      = #3B4252
red-nord   = #BF616A
red-i3     = #900000
green      = #A3BE8C
yellow     = #EBCB8B
blue       = #81A1C1
purple     = #B48EAD
cyan       = #88C0D0
white      = #E5E9F0
normal     = ${colors.foreground}
highlight  = ${colors.green}
warning    = ${colors.yellow}
alert      = ${colors.red-i3}

[bar]
width            = 100%
height           = 1%
line-size        = 1%
offset-x         = 0
offset-y         = 0
underline-size   = 0
fixed-center     = true
background       = ${colors.background}
line-color       = ${colors.background}
foreground       = ${colors.foreground}
font-0           = "SourceCodePro:size=12;1"
module-margin    = 1
monitor          = eDP1
monitor-fallback = DisplayPort-1

[bar/bottom]
inherit           = bar
bottom            = true
label-active-font = 0
modules-left      = i3 cpu cputemp gputemp text
modules-center    = emojis
modules-right     = sound notification weather date
tray-position     = right

[module/cputemp]
type=custom/script
exec=sensors | grep coretemp -A3 | awk '/Package/ {print $4}'
interval=1

[module/gputemp]
type=custom/script
exec=sensors | grep radeon -A3 | awk '/temp1/ {print $2}'
interval=1

[module/emojis]
type=custom/script
exec=/home/noah/.local/bin/display-emojis
interval=1

[module/sound]
type=custom/script
exec=pamixer --get-volume
interval=1
label=Vol %output%
scroll-up=sound.sh speaker increase

[module/notification]
type = custom/script
exec = /home/noah/.local/dotbin/dunst-do-not-disturb
click-left = dunst-do-not-disturb toggle

[module/text]
type = custom/text
content = htop
click-left = alacritty -e htop

[module/wired-network]
type      = internal/network
interface = enp0s25

[module/wireless-network]
type      = internal/network
interface = wlp3s0

[module/weather]
type       = custom/script
exec       = curl -s wttr.in/Dortmund?format='%t'
tail       = true
interval   = 300
click-left = xdg-open https://www.wetteronline.de/wetter/dortmund

[module/filesystem]
type          = internal/fs
mount-0       = /
interval      = 10
label-mounted = %mountpoint% %free%

[module/backlight]
type     = internal/xbacklight
interval = 0
format   = <ramp>
ramp-0   = ▁
ramp-1   = ▂
ramp-2   = ▃
ramp-3   = ▄
ramp-4   = ▅
ramp-5   = ▆
ramp-6   = ▇
ramp-7   = █

[module/date]
type     = internal/date
date-alt = %A, %d. %B %Y, %H:%M:%S (%Z %z)
date     = %Y-%m-%d %H:%M:%S

[module/ram]
type                   = internal/memory
format                 = <ramp-used> <ramp-swap-used>
ramp-used-0            = ▁
ramp-used-1            = ▂
ramp-used-2            = ▃
ramp-used-3            = ▄
ramp-used-4            = ▅
ramp-used-5            = ▆
ramp-used-6            = ▇
ramp-used-7            = █
ramp-swap-used-0            = 
ramp-swap-used-1            = ▁
ramp-swap-used-2            = ▂
ramp-swap-used-3            = ▃
ramp-swap-used-4            = ▄
ramp-swap-used-5            = ▅
ramp-swap-used-6            = ▆
ramp-swap-used-7            = ▇

[module/cpu]
type                       = internal/cpu
interval                   = 0.5
format                     = <ramp-coreload>
label                      =
ramp-coreload-spacing      = 0
ramp-coreload-0            = ▁
ramp-coreload-1            = ▂
ramp-coreload-2            = ▃
ramp-coreload-3            = ▄
ramp-coreload-4            = ▅
ramp-coreload-5            = ▆
ramp-coreload-6            = ▇
ramp-coreload-7            = █
ramp-coreload-0-foreground = ${colors.highlight}
ramp-coreload-1-foreground = ${colors.highlight}
ramp-coreload-2-foreground = ${colors.highlight}
ramp-coreload-3-foreground = ${colors.highlight}
ramp-coreload-4-foreground = ${colors.highlight}
ramp-coreload-5-foreground = ${colors.warning}
ramp-coreload-6-foreground = ${colors.warning}
ramp-coreload-7-foreground = ${colors.alert}
;▁▂▃▄▅▆▇█


[module/i3]
type                       = internal/i3
pin-workspaces             = false
strip-wsnumbers            = true
index-sort                 = true
format                     = <label-state> <label-mode>
format-spacing             = 1
enable-click               = true
;
label-separator            =
label-separator-padding    = 0
label-separator-foreground = ${colors.separator}
;
label-focused              = %name%
label-focused-foreground   = #ffffff
label-focused-background   = #285577
label-focused-padding      = 2
label-focused-margin       = 0
;
label-unfocused            = %name%
label-unfocused-foreground = #888888
label-unfocused-background = #222222
label-unfocused-padding    = 2
label-unfocused-margin     = 0
;
label-visible              = %name%
label-visible-foreground   = #ffffff
label-visible-background   = #5f676a
label-visible-padding      = 2
label-visible-margin       = 0
;
label-urgent               = %name%
label-urgent-foreground    = #ffffff
label-urgent-background    = ${colors.red-i3}
label-urgent-padding       = 2
label-urgent-margin        = 0
;
label-mode-foreground      = #ffffff
label-mode-background      = ${colors.red-i3}
label-mode-padding         = 1
label-mode-margin          = 0
