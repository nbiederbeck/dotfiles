; vim: ft=dosini
[colors]
background = #000000
foreground = #D8DEE9
black      = #3B4252
red        = #BF616A
green      = #A3BE8C
yellow     = #EBCB8B
blue       = #81A1C1
purple     = #B48EAD
cyan       = #88C0D0
white      = #E5E9F0
normal     = ${colors.foreground}
highlight  = ${colors.green}
warning    = ${colors.yellow}
alert      = ${colors.red}

[bar]
width            = 100%
height           = 16
line-size        = 16
offset-x         = 0
offset-y         = 0
underline-size   = 0
fixed-center     = true
background       = ${colors.background}
line-color       = ${colors.background}
foreground       = ${colors.foreground}
font-0           = "SourceCodePro:size=8;1"
font-1           = "FontAwesome:size=8;1"
font-2           = "DejaVuSerifCondensed:size=6;1"
font-3           = "NotoEmoji:scale=13"
module-margin    = 1
monitor          = eDP1
monitor-fallback = DP2-3

[bar/combined]
inherit           = bar
label-active-font = 0
modules-left      = battery temperature cpu ram backlight performance
modules-center    = traffic i3
modules-right     = date filesystem pulseaudio
tray-position     = right

[bar/top]
inherit           = bar
label-active-font = 0
modules-left      = temperature cpu ram backlight
modules-center    = date
modules-right     = pulseaudio
tray-position     = right

[bar/bottom]
inherit        = bar
bottom         = true
modules-left   = i3
modules-center =
modules-right  = battery_internal battery_external

[bar/bottom_only]
inherit           = bar
bottom            = true
label-active-font = 0
modules-left      = cpu ram i3
modules-center    = date
modules-right     = battery_internal battery_external
tray-position     = right

[module/wired-network]
type      = internal/network
interface = enp0s25

[module/wireless-network]
type      = internal/network
interface = wlp3s0

[module/weather]
type       = custom/script
exec       = curl -s wttr.in/Dortmund?format=3 wttr.in/LST-1?format=3 | tr '\n' ' '
click-left = curl wttr.in/Dortmund?format=3 -s
tail       = true
interval   = 120

[module/performance]
type     = custom/script
exec     = ~/.config/i3blocks/blocks/performance
format   = <label>
interval = 10

[module/fan]
type     = custom/script
exec     = cat /proc/acpi/ibm/fan 2> /dev/null | awk '/speed/ {print $2}'
format   = fan: <label>
interval = 1

[module/uptime]
type     = custom/script
exec     = uptime --pretty | sed 's/ days*/d/;s/ hours*/h/;s/ minutes*/m/;s/,//g'
interval = 60

[module/traffic]
type     = custom/script
exec     = ~/.config/i3blocks/blocks/traffic
format   = Traffic <label>
interval = 60

[module/filesystem]
type          = internal/fs
mount-0       = /
interval      = 10
label-mounted = %mountpoint% %free%

[module/backlight]
type     = internal/xbacklight
interval = 0
format   = <ramp>
ramp-0   = ▁
ramp-1   = ▂
ramp-2   = ▃
ramp-3   = ▄
ramp-4   = ▅
ramp-5   = ▆
ramp-6   = ▇
ramp-7   = █
; bar-width = 5
; bar-indicator = +
; bar-indicator-font = 2
; bar-indicator-foreground = ${colors.cyan}
; bar-fill = -
; bar-fill-font = 2
; bar-fill-foreground = ${colors.cyan}
; bar-empty = -
; bar-empty-font = 2
; bar-empty-foreground = ${colors.black}

[module/wired]
type                          = internal/network
interface                     = enp0s25
format-connected              =  <label-connected>
format-disconnected           = <label-disconnected>
label-connected               = %local_ip%
label-disconnected            =
; format-connected-underline=${colors.green}
; format-disconnected-underline=${colors.alert}
label-connected-foreground    = ${colors.green}
label-disconnected-foreground = ${colors.alert}

[module/wireless]
type                          = internal/network
interface                     = wlp3s0
format-connected              =  <label-connected>
format-disconnected           =  <label-disconnected>
label-connected               = %essid%
label-disconnected            = no wireless connection
; format-connected-underline=${colors.green}
; format-disconnected-underline=${colors.alert}
label-connected-foreground    = ${colors.green}
label-disconnected-foreground = ${colors.alert}

[module/battery]
type     = custom/script
exec     = ~/.config/i3blocks/blocks/battery_combined.py
format   = <label>
interval = 5

[module/battery_internal]
inherit = battery
battery = BAT0

[module/battery_external]
inherit = battery
battery = BAT1

[battery]
type                       = internal/battery
adapter                    = AC
full-at                    = 98
time-format                = %H:%M
format-charging            = <ramp-capacity> <label-charging>
label-charging             =  %percentage%%
format-discharging         = <ramp-capacity> <label-discharging>
label-discharging          = %time%
format-full                = <ramp-capacity> <label-full>
label-full                 = ""
; ramp-capacity-0 = 
ramp-capacity-0-foreground = ${colors.background}
ramp-capacity-0-background = ${colors.alert}
; ramp-capacity-1 = 
ramp-capacity-1-foreground = ${colors.alert}
; ramp-capacity-2 = 
; ramp-capacity-3 = 
; ramp-capacity-4 = 
ramp-capacity-0            = ▁
ramp-capacity-1            = ▂
ramp-capacity-2            = ▃
ramp-capacity-3            = ▄
ramp-capacity-4            = ▅
ramp-capacity-5            = ▆
ramp-capacity-6            = ▇
ramp-capacity-7            = █
; bar-capacity-width = 10
; bar-capacity-format = %{+u}%{+o}%fill%%empty%%{-u}%{-o}
; bar-capacity-fill = 
; bar-capacity-fill-foreground = #ddffffff
; bar-capacity-fill-font = 1
; bar-capacity-empty = 
; bar-capacity-empty-font = 1
; bar-capacity-empty-foreground = #44ffffff

[module/utc]
type     = custom/script
exec     = echo "($(date +%R --utc) UTC)"
interval = 10

[module/date]
type     = internal/date
; date = %%{F#99}%d.%m.%Y %H:%M%%{F-}
; date-alt = %%{F#fff}%A, %d %B %Y %H:%M:%S%%{F-}
date     = %A, %d. %B %Y, %H:%M:%S (%Z %z)
date-alt = %Y-%m-%d %H:%M:%S

[module/swap]
type                          = internal/memory
format                        = <label> <bar-swap-used>
label                         =
bar-used-width                = 10
bar-used-foreground-0         = ${colors.highlight}
bar-used-foreground-1         = ${colors.highlight}
bar-used-foreground-2         = ${colors.warning}
bar-used-foreground-3         = ${colors.alert}
bar-used-indicator            = |
bar-used-indicator-foreground = ${colors.foreground}
bar-used-fill                 = ─
bar-used-empty                = ─
bar-used-empty-foreground     = ${colors.black}


[module/ram]
type                   = internal/memory
format                 = <ramp-used> <ramp-swap-used>
ramp-used-0            = ▁
ramp-used-1            = ▂
ramp-used-2            = ▃
ramp-used-3            = ▄
ramp-used-4            = ▅
ramp-used-5            = ▆
ramp-used-6            = ▇
ramp-used-7            = █
ramp-swap-used-0            = ▁
ramp-swap-used-1            = ▂
ramp-swap-used-2            = ▃
ramp-swap-used-3            = ▄
ramp-swap-used-4            = ▅
ramp-swap-used-5            = ▆
ramp-swap-used-6            = ▇
ramp-swap-used-7            = █
; ramp-used-0-foreground = ${colors.highlight}
; ramp-used-1-foreground = ${colors.highlight}
; ramp-used-2-foreground = ${colors.highlight}
; ramp-used-3-foreground = ${colors.highlight}
; ramp-used-4-foreground = ${colors.warning}
; ramp-used-5-foreground = ${colors.warning}
; ramp-used-6-foreground = ${colors.alert}
; ramp-used-7-foreground = ${colors.alert}

[module/temperature]
type                  = internal/temperature
interval              = 1
warn-temperature      = 60
format                = <label>
label-warn-foreground = ${colors.alert}

[module/cpu]
type                       = internal/cpu
interval                   = 0.5
format                     = <ramp-coreload>
label                      =
ramp-coreload-spacing      = 0
ramp-coreload-0            = ▁
ramp-coreload-1            = ▂
ramp-coreload-2            = ▃
ramp-coreload-3            = ▄
ramp-coreload-4            = ▅
ramp-coreload-5            = ▆
ramp-coreload-6            = ▇
ramp-coreload-7            = █
; ramp-coreload-0-foreground = ${colors.highlight}
; ramp-coreload-1-foreground = ${colors.highlight}
; ramp-coreload-2-foreground = ${colors.highlight}
; ramp-coreload-3-foreground = ${colors.highlight}
; ramp-coreload-4-foreground = ${colors.warning}
; ramp-coreload-5-foreground = ${colors.warning}
; ramp-coreload-6-foreground = ${colors.alert}
; ramp-coreload-7-foreground = ${colors.alert}

[module/pulseaudio]
type          = internal/pulseaudio
sink          = alsa_output.pci-0000_00_1b.0.analog-stereo
format-volume = <ramp-volume> <label-volume>
label-muted   = 
; Only applies if <ramp-volume> is used
ramp-volume-0 = 
ramp-volume-1 = 


[module/i3]
type                       = internal/i3
pin-workspaces             = false
strip-wsnumbers            = true
index-sort                 = true
format                     = <label-state> <label-mode>
format-spacing             = 0
enable-click               = true
;
label-separator            =
label-separator-padding    = 0
label-separator-foreground = ${colors.foreground}
;
label-focused              = %name%
label-focused-foreground   = ${colors.background}
label-focused-background   = ${colors.foreground}
; label-focused-underline=${colors.foreground}
label-focused-padding      = 1
label-focused-margin       = 0
;
label-unfocused            = %name%
label-unfocused-foreground = ${colors.yellow}
label-unfocused-background = ${colors.background}
label-unfocused-underline  = ${colors.background}
label-unfocused-padding    = 1
label-unfocused-margin     = 0
;
label-visible              = %name%
label-visible-foreground   = ${colors.green}
label-visible-background   = ${colors.background}
; label-visible-underline=${colors.background}
label-visible-padding      = 1
label-visible-margin       = 0
;
label-urgent               = %name%
label-urgent-foreground    = ${colors.red}
label-urgent-background    = ${colors.background}
; label-urgent-underline=${colors.background}
label-urgent-padding       = 1
label-urgent-margin        = 0
;
; label-mode = %name%
label-mode-foreground      = ${colors.red}
label-mode-background      = ${colors.background}
; label-mode-underline=${colors.background}
label-mode-padding         = 1
label-mode-margin          = 0
