# vim: commentstring=#%s
super + Return
    urxvt


# Switch Window Down=Meta+Alt+Down; Meta+J
# Switch Window Left=Meta+Alt+Left; Meta+H
# Switch Window Right=Meta+Alt+Right; Meta+L
# Switch Window Up=Meta+Alt+Up; Meta+K
super + {h,j,k,l}
    bspc node --focus {west,south,north,east}
# Window Fullscreen=Meta+F
super + f
    bspc node --state \~fullscreen
# Window Maximize=Meta+PgUp; Meta+Shift+M
super + shift + m
    bspc desktop --layout next
# Window Minimize=Meta+PgDown; Meta+M
# Window No Border=Meta+B
super + b
    bspc config border_width \~0
# Window Quick Tile Bottom=Meta+Down; Meta+Shift+J
# Window Quick Tile Left=Meta+Left; Meta+Shift+H
# Window Quick Tile Right=Meta+Right; Meta+Shift+L
# Window Quick Tile Top=Meta+Up; Meta+Shift+K
super + shift + {h,j,k,l}
    bspc node -s {west,south,north,east}
# Window Quick Tile Bottom Left=Meta+Alt+J
# Window Quick Tile Bottom Right=Meta+Alt+K
# Window Quick Tile Top Left=Meta+Alt+U
# Window Quick Tile Top Right=Meta+Alt+I

