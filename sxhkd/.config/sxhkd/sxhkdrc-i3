# vim: commentstring=#%s
super + Return
    alacritty

super + shift + p
    ~/.local/dotbin/bwmenu

super + d
    i3-dmenu-desktop

XF86AudioRaiseVolume
    pactl set-sink-volume 1 +5%
XF86AudioLowerVolume
    pactl set-sink-volume 1 -5%
XF86AudioMute
    pactl set-sink-mute 1 toggle
XF86AudioMicMute
    pactl set-source-mute 1 toggle

XF86MonBrightnessUp
    xbacklight -inc 10
XF86MonBrightnessDown
    xbacklight -dec 10
super + XF86MonBrightnessUp
    xbacklight -set 100
super + XF86MonBrightnessDown
    xbacklight -set 1

# F7
XF86Display
    ~/.local/dotbin/i3-randr
super + XF86Display
    arandr
