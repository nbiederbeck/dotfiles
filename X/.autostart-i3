#!/bin/bash
# Start with i3 window manager

PATH=${PATH}:~/.local/dotbin/

add-keyboard &!

ncdu ~ -o ~/ncdu.file -0 &!

nm-applet &!

[[ $(pgrep restic) ]] || restic-backup-interval &!
[[ $(pgrep unclutte) ]] || unclutter --timeout=5 --jitter=1 -b &!
[[ $(pgrep etesync) ]] || etesync-dav &!
[[ $(pgrep redshift) ]] || redshift &!
[[ $(pgrep dunst) ]] || dunst -print 2>&1 >> /tmp/dunst-notifications-log &!
[[ $(pgrep dropbox) ]] || dropbox &!
[[ $(pgrep sxhkd) ]] || sxhkd -c ~/.config/sxhkd/sxhkdrc-i3 &!

~/.local/dotbin/autostart-i3 &!

i3-battery-popup -L 20 -n &!

feh --bg-fill ~/Pictures/background &!

~/.config/i3lock/lock_when_idle.sh &!

xrdb -load ~/.Xresources

i3-msg reload
